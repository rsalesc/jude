{
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "extends": [
        "eslint:recommended",
        "plugin:promise/recommended"
    ],
    "settings": {
        "import/resolver": {
            "babel-module": {}
        }
    },
    "plugins": [
        "promise",
        "prefer-object-spread",
        "class-property",
        "dependencies",
        "eslint-plugin-local-rules",
        "import",
        "html"
    ],
    "rules": {
        "import/no-unresolved": [2, { "commonjs": true, "amd": true }],
        "import/no-dynamic-require": 2,
        "import/no-absolute-path": 2,
        "prefer-object-spread/prefer-object-spread": 2,
        "class-property/class-property-semicolon": 2,
        "dependencies/case-sensitive": 2,
        "dependencies/require-json-ext": 2,
        "no-return-await": 2,
        "promise/prefer-await-to-then": 1,
        "promise/no-promise-in-callback": 0,
        "require-await": 0,
        "local-rules/no-await-as-function": 1,
        "local-rules/no-async-as-function": 1,
        "no-console": 0,
        "array-callback-return": 2,
        "consistent-return": 2,
        "curly": [2, "multi-or-nest"],
        "dot-location": [1, "property"],
        "dot-notation": 1,
        "eqeqeq": [2, "always", { "null": "ignore" }],
        "guard-for-in": 2,
        "no-else-return": 1,
        "no-empty-function": 1,
        "no-implicit-coercion": 2,
        "no-loop-func": 1,
        "no-multi-spaces": 1,
        "no-new": 1,
        "no-param-reassign": 1,
        "no-return-assign": 1,
        "no-self-compare": 1,
        "no-sequences": 1,
        "no-unused-expressions": 1,
        "no-unused-vars": [2, { "vars": "all", "argsIgnorePattern": "[Ee]rr$|^_", "varsIgnorePattern": "^_|[A-Z_]+" }],
        "no-useless-return": 1,
        "no-useless-concat": 1,
        "no-void": 1,
        "no-with": 2,
        "radix": 2,
        "vars-on-top": 1,
        "wrap-iife": [2, "inside", { "functionPrototypeMethods": true }],
        "yoda": [1, "never", { "onlyEquality": true }],
        "no-delete-var": 2,
        "no-label-var": 2,
        "no-shadow": 1,
        "no-shadow-restricted-names": 1,
        "no-undef-init": 2,
        "no-undefined": 0,
        "no-use-before-define": 2,
        "global-require": 2,
        "handle-callback-err": 0,
        "no-mixed-requires": 2,
        "no-new-require": 2,
        "no-path-concat": 2,
        "no-sync": 1,
        "array-bracket-spacing": [2, "never"],
        "block-spacing": [2, "always"],
        "brace-style": [2, "1tbs"],
        "comma-dangle": [2, "never"],
        "comma-spacing": 2,
        "comma-style": [2, "last"],
        "computed-property-spacing": [2, "never"],
        "consistent-this": "off",
        "eol-last": [2, "always"],
        "func-call-spacing": [2, "never"],
        "func-name-matching": "off",
        "func-names": 0,
        "func-style": "off",
        "indent": [2, 2, {
            "FunctionDeclaration": { "parameters": "first", "body": 1 },
            "FunctionExpression": { "parameters": "first", "body": 1 },
            "CallExpression": { "arguments": "first" },
            "ArrayExpression": "first",
            "ObjectExpression": "first"
        }],
        "key-spacing": [2, { "beforeColon": false, "afterColon": true }],
        "keyword-spacing": [2, { "before": true, "after": true }],
        "line-comment-position": [1, { "position": "above" }],
        "linebreak-style": [2, "unix"],
        "lines-around-directive": [1, "always"],
        "max-depth": [1, { "max": 6 }],
        "max-len": [1, { 
            "code": 100,
            "tabWidth": 2,
            "comments": 90,
            "ignoreUrls": true,
            "ignoreTemplateLiterals": true,
            "ignoreRegExpLiterals": true
        }],
        "max-lines": ["off", { "max": 500, "skipBlankLines": true, "skipComments": true }],
        "max-params": ["off", { "max": 4 }],
        "max-statements": ["off", { "max": 15, "ignoreTopLevelFunctions": true }],
        "multiline-ternary": ["error", "always"],
        "new-parens": 2,
        "newline-per-chained-call": [2, { "ignoreChainWithDepth": 3 }],
        "no-array-constructor": 2,
        "no-continue": 0,
        "no-lonely-if": 2,
        "no-extra-parens": [1, "all", { "nestedBinaryExpressions": false }],
        "no-mixed-spaces-and-tabs": 2,
        "no-multi-assign": 2,
        "no-multiple-empty-lines": [2, { "max": 2, "maxEOF": 1, "maxBOF": 0 }],
        "no-nested-ternary": 2,
        "no-new-object": 2,
        "no-plusplus": [0, { "allowForLoopAfterthoughts": true }],
        "no-restricted-syntax": [2, {
            "selector": "ForInStatement",
            "message": "Use Object.{keys, entries, values}."
        }, {
            "selector": "LabeledStatement",
            "message": "Labels are not allowed."
        }],
        "no-tabs": 2,
        "no-trailing-spaces": 2,
        "no-unneeded-ternary": [2, { "defaultAssignment": false }],
        "no-whitespace-before-property": 2,
        "nonblock-statement-body-position": [2, "below"],
        "object-curly-spacing": [2, "always", { "arraysInObjects": false, "objectsInObjects": false }],
        "object-property-newline": [2, { "allowMultiplePropertiesPerLine": true }],
        "one-var": [2, "never"],
        "one-var-declaration-per-line": [2, "always"],
        "operator-assignment": [2, "always"],
        "operator-linebreak": [2, "before"],
        "padded-blocks": [2, "never"],
        "quote-props": [2, "as-needed", { "numbers": true }],
        "quotes": [2, "double", { "avoidEscape": true, "allowTemplateLiterals": true }],
        "semi": [2, "always"],
        "semi-spacing": [2, { "before": false, "after": true }],
        "space-before-blocks": [2, "always"],
        "space-before-function-paren": [2, { "anonymous": "always", "named": "never", "asyncArrow": "always" }],
        "space-in-parens": [2, "never"],
        "space-infix-ops": [2, { "int32Hint": true }],
        "space-unary-ops": [2, { "words": true, "nonwords": false }],
        "spaced-comment": [1, "always", {
            "line": {
                "exceptions": ["-", "+"],
                "markers": ["/"]
            },
            "block": {
                "exceptions": ["-", "+"],
                "markers": ["*"]
            }
        }],
        "template-tag-spacing": [1, "always"],
        "unicode-bom": [2, "never"],
        "wrap-regex": "off",
        "arrow-body-style": [2, "as-needed", { "requireReturnForObjectLiteral": false }],
        "arrow-parens": [2, "as-needed", { "requireForBlockBody": true }],
        "arrow-spacing": [2, { "before": true, "after": true }],
        "generator-star-spacing": [2, "both"],
        "no-confusing-arrow": [2, { "allowParens": true }],
        "no-this-before-super": 2,
        "no-useless-computed-key": 2,
        "no-useless-constructor": 2,
        "no-useless-rename": 2,
        "no-var": 2,
        "object-shorthand": [2, "always", { "avoidQuotes": true}],
        "prefer-arrow-callback": [2, { "allowUnboundThis": true }],
        "prefer-const": [2, { "destructuring": "any", "ignoreReadBeforeAssign": true }],
        "prefer-destructuring": [2, { "object": true, "array": true }],
        "prefer-numeric-literals": 2,
        "prefer-rest-params": 2,
        "prefer-spread": 2,
        "prefer-template": 2,
        "rest-spread-spacing": [2, "never"],
        "sort-imports": "off",
        "symbol-description": 2,
        "template-curly-spacing": [2, "never"],
        "yield-star-spacing": [2, "both"],
        "no-await-in-loop": 2,
        "no-template-curly-in-string": 1
    },
    "globals": {
        "db": false,
        "judeQueue": false,
        "weedClient": false
    }
}